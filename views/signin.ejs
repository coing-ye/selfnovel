<!DOCTYPE html>
<html lang="ko">
<head>
    <%- include('common/head') %>
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    
</head>
<body>
    <header>
        <%- include('common/navbar') %>
    </header>
    <div class = "login_wrapper" style = "height:90vh;">
        <div class="login" style="width:50%;">
   
        </div>
        <div class="login_tem">
            <div class ="login_wrap">
                <div class="button-wrap">
                    <div id="signbtn"></div>
                    <button type="button" class="togglebtn" id="togglein" onclick="login()">로그인</button>
                    <button type="button" class="togglebtn" id="toggleup" onclick="register()">회원 가입</button>
                </div>
                <!-- <div class="social-icons">
                    <img src="img/fb.png" alt="facebook">
                    <img src="img/tw.png" alt="twitter">
                    <img src="img/gl.png" alt="google">
                </div> -->
                <form id="login" action="" class="input-group">
                    <input type="text" class="input-field" placeholder="아이디를 입력해주세요" required>
                    <div class = "input-field">
                        <input type="password" class="input-pwd"  placeholder="비밀번호를 입력해주세요" required>
                        <i class="fas fa-eye"></i>
                    </div>
                    
                    <div class="pwd_remember">
                        <input type="checkbox" class="checkbox"><div>Remember Id</div>
                    </div>
                    <div>
                        <button class="submit signin_sb"><b>로그인</b></button>
                    </div>
                    
                </form>
                <form id="register" action="" class="input-group">
                    <div class="input-field">
                        <input type="text" class="input-id" placeholder="아이디를 입력해주세요" required>
                        <i class="far fa-check-circle idduplecheck"></i>
                    </div>
                    <div class = "input-field">
                        <input type="password" class="input-pwd"  placeholder="비밀번호를 입력해주세요" required>
                        <i class="fas fa-eye viewpwd"></i>
                    </div>
                    <div class = "pwd_remember">
                        <input type="checkbox" class="checkbox"><div>Terms and conditions</div>
                    </div>
                    <div>
                        <button class="submit signup_sb"><b>회원 가입</b></button>
                    </div>
                    
                </form>
            </div>

        </div>
    </div>
    <%- include('common/signjs') %>
    <%- include('common/jsinclude') %>
</body>
</html>